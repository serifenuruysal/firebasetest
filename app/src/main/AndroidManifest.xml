<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="serifenuruysal.com.firebasetest">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ChooserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CustomAuthActivity"
            android:label="@string/label_custom_auth" />
        <activity
            android:name=".activity.GoogleSignInActivity"
            android:label="@string/label_google_sign_in" />
        <activity
            android:name="com.google.firebase.quickstart.auth.FacebookLoginActivity"
            android:label="@string/label_facebook_login" />
        <activity
            android:name=".activity.EmailPasswordActivity"
            android:label="@string/label_emailpassword"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activity.PhoneAuthActivity"
            android:label="@string/label_phone_auth"></activity>
        <activity
            android:name=".activity.AnonymousAuthActivity"
            android:label="@string/label_anonymous_auth" />
        <activity
            android:name=".activity.TwitterLoginActivity"
            android:label="@string/label_twitter_login" />
        <activity
            android:name="com.google.firebase.quickstart.auth.FirebaseUIActivity"
            android:label="@string/label_firebase_ui" />

    </application>

</manifest>